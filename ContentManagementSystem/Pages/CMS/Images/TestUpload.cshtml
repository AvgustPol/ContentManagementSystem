@page
@model ContentManagementSystem.Pages.CMS.Images.TestUploadModel
@*tmp testing uploading images TODO - add CSS as .css file to www/root *@
<style>
  .containerTest img {
    max-width: 100%;
    height: auto;
  }
</style>

<div class="row">
  <div class="col-md-12">
    <form method="post" enctype="multipart/form-data">
      <div class="form-group">
        <div class="col-md-10">
          <p>Upload one or more files using this form:</p>
          <input type="file" name="files" multiple />
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-10">
          <input type="submit" value="Upload" />
        </div>
      </div>
    </form>
  </div>
</div>

<hr />

@foreach (var image in Model.AllImagesSrc)
{
  <div class="row">
    <div class="col-md-12 containerTest">
      <img src="@image" />
      <hr />
    </div>
  </div>
}