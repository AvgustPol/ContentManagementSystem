@page
@model ContentManagementSystem.Pages.CMS.EfScaffoldTesting.IndexModel

<style>
  img {
    max-width: 100%;
    height: auto;
  }
</style>

@{
  ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
  <a asp-page="Create">Create New</a>
</p>
<table class="table">
  <thead>
    <tr>
      <th>
        @Html.DisplayNameFor(model => model.ImageContent[0].Name)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.ImageContent[0].Data)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.ImageContent[0].Length)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.ImageContent[0].ContentType)
      </th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in Model.ImageContent)
    {
      <tr>
        <td>
          @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td width="500px">
          @{
            string image;
            if (item.Data != null)
            {
              image = @"data:image / jpeg; base64," + Convert.ToBase64String(item.Data);
            }
            else
            {
              image = @"https://sitechecker.pro/wp-content/uploads/2017/12/404.png";
            }
          }
          <img src=" @image " />
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Length)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.ContentType)
        </td>
        <td>
          <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
          <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
          <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
        </td>
      </tr>
    }
  </tbody>
</table>